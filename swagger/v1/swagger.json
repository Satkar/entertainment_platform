{
  "openapi": "3.0.0",
  "info": {
    "title": "API V1",
    "version": "v1"
  },
  "paths": {
    "/api/v1/gallery_items": {
      "get": {
        "summary": "An endpoint to return both movies and seasons, ordered by creation",
        "tags": [
          "Movies And Seasons"
        ],
        "responses": {
          "200": {
            "description": ""
          }
        }
      }
    },
    "/api/v1/movies": {
      "get": {
        "summary": "An endpoint to returns  movies, ordered by creation",
        "tags": [
          "Movies"
        ],
        "responses": {
          "200": {
            "description": ""
          }
        }
      }
    },
    "/api/v1/seasons": {
      "get": {
        "summary": "An endpoint to return the seasons ordered by creation, including the list of episodes ordered by its number.",
        "tags": [
          "Seasons"
        ],
        "responses": {
          "200": {
            "description": ""
          }
        }
      }
    },
    "/api/v1/users": {
      "post": {
        "summary": "An endpoint to create Users",
        "tags": [
          "Users"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  }
                },
                "required": [
                  "email"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User successfully created"
          },
          "400": {
            "description": "Failed due to invalid email or user already exists"
          }
        }
      }
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "variables": {
        "defaultHost": {
          "default": "localhost:3000"
        }
      }
    }
  ]
}